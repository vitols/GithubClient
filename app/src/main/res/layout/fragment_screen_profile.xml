<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:id="@+id/screen_profile_avatar"
        android:src="@drawable/logo"
        app:layout_behavior="com.example.android.githubclient.mainScreen.behavior.AvatarToRightTopCornerBehaviour"/>

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="172dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/screen_profile_name"
                android:background="@null"
                android:gravity="center"
                android:text="Oleg Vitols"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/screen_profile_login"
                android:background="@null"
                android:gravity="center"
                android:text="vitols"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/screen_profile_description"
                android:background="@null"
                android:gravity="center"
                android:text="Android developer in mmcs faculty of southern federal university Rostov-on-Don Russia"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/screen_profile_company"
                android:background="@null"
                android:gravity="center"
                android:text="MobileDev"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/screen_profile_place"
                android:background="@null"
                android:gravity="center"
                android:text="Rostov-on-Don, Russia"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/screen_profile_email"
                android:background="@null"
                android:gravity="center"
                android:text="vitolsov@gmail.com"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@null"
                android:gravity="center"
                android:text="a"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@null"
                android:gravity="center"
                android:text="a"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@null"
                android:gravity="center"
                android:text="a"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@null"
                android:gravity="center"
                android:text="a"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
